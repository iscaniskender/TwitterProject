@using Microsoft.AspNetCore.Http;
@model List<Common.Dto.DtoMainTweetsUsers>;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ var loguser = Context.Session.GetObjectFromJson<Cammon.Dto.DtoUser>("loggerUser");

    var username = Convert.ToString(loguser.Username);
    var name = Convert.ToString(loguser.Name);
    var surname = Convert.ToString(loguser.Surname);
    var gelenıd = Convert.ToInt32(loguser.Id);}

